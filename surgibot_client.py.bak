class ScheduleDelegate(QtWidgets.QStyledItemDelegate):
    WRAP_COLS = {2, 4, 5, 6, 7}  # ‡∏ä‡∏∑‡πà‡∏≠-‡∏™‡∏Å‡∏∏‡∏•, Diagnosis, Operation, ‡πÅ‡∏û‡∏ó‡∏¢‡πå, Ward

